<div class="topslider">
  <div class="bs-example bs-example-home">
    <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
      <ol class="carousel-indicators">
        <%@banners.each_with_index do |banner,index|%>
          <li data-target="#myCarousel" data-slide-to="<%=index%>" class="<%=index == 0 ? 'active' : '' %>"></li>
        <%end%>
      </ol>
      <!-- Carousel items -->
      <div class="carousel-inner">
        <%@banners.each_with_index do |banner,index|%>
          <div id="<%=index%>" class="<%=index == 0 ? 'active' : '' %> item">
            <div class="slider-img-bg">
              <%=link_to image_tag(banner.image.url(:original),style: 'height:550px') , "#{banner.link.present? ? banner.link : '#'}"%>
            </div>
            <div class="container">
              <div class="slider-content-container-2">
                <div class="year-div">2014</div>
                  <div class="sale">SALE</div>
                  <div class="superspring">super spring sale </div>
                  <div class="whitebrd-bg"></div>
                  <div class="discount">up to 50% off</div>
                  <div class="allsale-item">all sale items</div>
                     
              </div>
            </div>
          </div>
        <%end%>
      </div>
      <!-- Carousel nav --> 
      <a class="carousel-control carousel-control-left left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="carousel-control carousel-control-right right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>  
  </div>
</div>