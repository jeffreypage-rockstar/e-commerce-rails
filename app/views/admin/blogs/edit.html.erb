
	<div class="container-fluid">
		<!-- BEGIN PAGE HEADER-->
		<div class="row-fluid">
			<div class="span12">
				<!-- BEGIN PAGE TITLE & BREADCRUMB-->			
				<h3 class="page-title innerpage-title">
                <button class="btn blue pull-right" id="sample_editable_1_new" onclick="window.location.href='/<%=params[:controller]%>'">Back to Listing</button>
                Edit Blog
				</h3>                        
			</div>
		</div>
		<!-- END PAGE HEADER-->
		<div class="row-fluid">
			<div class="span12">
				<!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet-body">
                	<%=render :partial => "/shared/flash_notice"%>
				</div>
                <div class="portlet-body form edit-form">
                <!-- BEGIN FORM-->
                <%=form_for @blog,:url=> admin_blog_url(@blog),:html=>{:class=>"form-horizontal"} do |f|%>
			      <%=render :partial => "form",:locals=>{:f=>f}%>
			    <%end%>
                <!-- END FORM-->
             </div>
				<!-- END EXAMPLE TABLE PORTLET-->
				<table class="table table-striped table-hover table-bordered table-hd" id="sample_editable_1">
									<thead>
										<tr>
											
											
											<th>Description</th>
											
											<th class="text-center">Delete</th>
										</tr>
									</thead>
									<tbody>
										<%if @blog.comments != [] %>
											<%@blog.comments.each do |comment|%>
												<tr class="">
													
													<td><%=truncate(comment.note.html_safe,legth: 100)%></td>
													
													<td class="text-center">
														<%= link_to("comments/#{comment.id}",:method=>"DELETE",:confirm=>"Are you sure you want to delete?") do%>
															<i class="icon-trash icon-center-trash"></i>
														<%end%>
													</td>
												</tr>
											<%end%>
										<%else%>
										<tr class="" >
											<td colspan="5" align="center" verticle-align="middle"> No Data found </td>
										</tr>
										<%end%>
										

									</tbody>
								</table>
			</div>
		</div>
	</div>
	<!-- END PAGE CONTAINER-->		
