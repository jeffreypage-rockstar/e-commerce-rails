<div class="admin_title_header">
  <h3 class="page-title">Shipping Methods</h3>
  <%= link_to "New Shipping Method", new_admin_config_shipping_method_path, :class => 'button' %>
</div>

<div class="admin_shipping_methods">
  <table class="table table-striped table-hover table-bordered table-hd" >
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Name</th>
      <th>Zone</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @shipping_methods.each do |shipping_method| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= shipping_method.name %> </td>
      <td><%= shipping_method.shipping_zone.name %> </td>
      <td><%= link_to "Edit", edit_admin_config_shipping_method_path(shipping_method) %></td>
      <td>
        <%= link_to("/admin/config/shipping_methods/#{shipping_method.id}",:method=>"DELETE",:confirm=>"Are you sure you want to delete?") do%>
          <i class="icon-trash icon-center-trash"></i>
        <%end%>
      </td>
    </tr>
  <% end %>
  </table>
</div>
