<div class="admin_title_header">
  <h3 class="page-title">Shipping Categories</h3>
  <%= link_to 'New Shipping Category', new_admin_config_shipping_category_path, :class => 'button' %>
</div>

<div class="admin_shipping_categories">
  <table class="table table-striped table-hover table-bordered table-hd" >
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Name</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @shipping_categories.each do |shipping_category| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= shipping_category.name %></td>
      <td><%= link_to 'Edit', edit_admin_config_shipping_category_path(shipping_category) %></td>
      <td>
        <%= link_to("/admin/config/shipping_categories/#{shipping_category.id}",:method=>"DELETE",:confirm=>"Are you sure you want to delete?") do%>
          <i class="icon-trash icon-center-trash"></i>
        <%end%>
      </td>
    </tr>
  <% end %>
  </table>
</div>