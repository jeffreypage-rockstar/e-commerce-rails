<div class="admin_title_header">
  <h3 class="page-title">Listing Accounts</h3>
  <%= link_to 'New Account', new_admin_config_account_path, :class => 'button' %>
</div>

<div class="admin_accounts">
  <div class="admin_products">
    <%=render :partial=>"/shared/filters"%>
  </div> 

  <table class="table table-striped table-hover table-bordered table-hd" >
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Account type</th>
      <th>Monthly charge</th>
      <th>Active</th>
      <th>Delete</th>
    </tr>
    </thead>

  <% @accounts.each do |account| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to account.account_type, edit_admin_config_account_path(account) %></td>
      <td><%= account.monthly_charge %></td>
      <td><%= account.active %></td>
      <td><%= link_to "Delete", admin_config_account_path(account), :method => :delete, :confirm => "Are you sure to delete this record?" %></td>
    </tr>
  <% end %>
  </table>
</div>