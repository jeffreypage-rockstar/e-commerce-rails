<fieldset id="admin-property-names">
  <label>Identifing Name</label>
  <%= form.text_field :identifing_name %>

  <label>Display Name</label>
    
  <fieldset>
        <label>Traditional Chinese</label>
        <% set_lang "tcn" %>
        <%= form.text_field :display_name %>
        <label>Simple Chinese</label>
        <% set_lang "cn" %>
        <% chin = form.object %>
        <%= text_field_tag "cn[display_name]",chin.display_name %>
        <label>English</label>
        <% set_lang "en" %>
        <% eng = form.object %>
        <%= text_field_tag "en[display_name]",eng.display_name %>
  </fieldset>
  
  
  <%if current_user%>
  	<%=form.hidden_field :user_id ,:value=> current_user.id%>
  <%end%>
</fieldset>