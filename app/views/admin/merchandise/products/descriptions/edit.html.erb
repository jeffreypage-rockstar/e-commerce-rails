<%= render :partial => '/admin/merchandise/sub_header'%>

<h3 class="page-title">Edit Product Description</h3> <%= link_to 'Back to Product', admin_merchandise_product_path(@product), :class => 'button', :style => "float:right; margin-top: -45px" %>

<div id="article-sidebar" class="sidebar">
  <%= form_for @product, :url  => admin_merchandise_products_description_path(@product) do |f| %>
    <%= f.text_field :name %>
    <label>Description</label>
      <fieldset>
        <label>Traditional Chinese</label>
        <% set_lang "tcn" %>
        <%= f.cktext_area :description_markup,  :cols => "92", :rows => "15" %>
        <label>Simple Chinese</label>
        <% set_lang "cn" %>
        <% chin = f.object %>
        <%= cktext_area_tag "cn[description_markup]",chin.description_markup %>
        <label>English</label>
        <% set_lang "en" %>
        <% eng = f.object %>
        <%= cktext_area_tag "en[description_markup]",eng.description_markup %>
      </fieldset>

    <%= f.submit "Update", :class  => "button" %>
  <% end %>
</div>

<% content_for :head do %>
  <%= stylesheet_link_tag "markitup/skins/markitup/style" %>
  <%= stylesheet_link_tag "markitup/sets/default/style" %>
  <%= javascript_include_tag "markitup/jquery.markitup" %>
  <%= javascript_include_tag "markitup/sets/default/set" %>
<% end %>

<script type="text/javascript" >
   $(document).ready(function() {
      $("#markItUp").markItUp(mySettings);
   });
</script>