
<table class="table table-striped table-hover table-bordered table-hd" id="sample_editable_1">
									<thead>
										<tr>
											
											<th>Sr. No.</th>
											<th>Type</th>
											<th>Date</th>
											<th>Amount</th>
											<th>State</th>
											<th>Active</th>
										</tr>
									</thead>
									<tbody>
										<%if @invoices.present? %>
											<%@invoices.each do |invoice|%>
												<tr class="">
													
													<td><%=invoice.id.to_s%></td>
													<td><%= link_to 'Invoice', "/admin/document/invoices/#{invoice.id}"%></td>
													<td><%=invoice.created_at.strftime("%d/%m/%Y").to_s%></td>
													<td><%=invoice.amount.to_s%></td>
													<td><%=invoice.state.to_s%></td>
													<td class="text-center"><i class="icon-ok icon-center-<%= invoice.active? ? 'check' : 'uncheck' %>"></i></td>
													
												</tr>
											<%end%>
										<%else%>
										<tr class="" >
											<td colspan="5" align="center" verticle-align="middle"> No Data found </td>
										</tr>
										<%end%>
										

									</tbody>
								</table>

								<table class="table table-striped table-hover table-bordered table-hd" id="sample_editable_1">
									<thead>
										<tr>
											
											<th>Sr. No.</th>
											<th>Type</th>
											<th>Notes</th>
											<th>Amount</th>
											
										</tr>
									</thead>
									<tbody>
										<%if @accounting_adjustments.present? %>
											<%@accounting_adjustments.each do |account_adj|%>
												<tr class="">
													
													<td><%=account_adj.id.to_s%></td>
													<td>AccountingAdjustment</td>
													<td><%=account_adj.notes.to_s%></td>
													<td><%=account_adj.amount.to_s%></td>
													
													
												</tr>
												<% if account_adj.adjustable.class.to_s == "Inventory" %>
												<tr>
													<td></td>
													<td colspan="3">
														<table class="table table-striped table-hover table-bordered table-hd" id="sample_editable_2">
															<thead>
															<tr>
																<th>
																	Inventory(count on hand)
																</th>
																<th>
																	Inventory(count pending to customer)
																</th>
																<th>
																	Inventory(count pending from supplier)
																</th>

															</tr>
														</thead>
														<tbody>
															<tr>
																<td>
																	<%=account_adj.adjustable.count_on_hand.to_s%>
																</td>
																<td>
																	<%=account_adj.adjustable.count_pending_to_customer.to_s%>
																</td>
																<td>
																	<%=account_adj.adjustable.count_pending_from_supplier.to_s%>
																</td>
															</tr>
														</tbody>
														</table>
													</td>
												</tr>
												<%end%>
											<%end%>
										<%else%>
										<tr class="" >
											<td colspan="5" align="center" verticle-align="middle"> No Data found </td>
										</tr>
										<%end%>
										

									</tbody>
								</table>