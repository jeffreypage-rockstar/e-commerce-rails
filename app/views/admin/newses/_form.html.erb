<div class="control-group">
    <label class="control-label">Title </label>
    <fieldset>
      <label>Traditional Chinese</label>
      <% set_lang "tcn" %>      
      <%=f.text_field :title ,:class=>"span5 m-wrap"%>            
      <label>Simple Chinese</label>
      <% set_lang "cn" %>
      <% chin = f.object %>      
      <%=text_field_tag "cn[title]",chin.title ,:class=>"span5 m-wrap"%>            
      <label>English</label>
      <% set_lang "en" %>
      <% eng = f.object %>      
      <%=text_field_tag "en[title]",eng.title ,:class=>"span5 m-wrap"%>            
    </fieldset>     
</div>

<div class="control-group">
    <label class="control-label">Description</label>
    <div >
      <fieldset>
        <label>Traditional Chinese</label>
        <% set_lang "tcn" %>      
        <%=f.text_area :description ,:class=>"someclass"%>            
        <label>Simple Chinese</label>
        <% set_lang "cn" %>
        <% chin = f.object %>      
        <%=text_area_tag "cn[description]",chin.description ,:class=>"someclass" %>            
        <label>English</label>
        <% set_lang "en" %>
        <% eng = f.object %>      
        <%=text_area_tag "en[description]",eng.description ,:class=>"someclass" %>            
      </fieldset>
     <%#= f.cktext_area :description, :class => 'someclass', :ckeditor => {:language => 'eng'} %>
     </div>
</div>

<div class="control-group">
    <label class="control-label">Subject </label>
    <fieldset>
      <label>Traditional Chinese</label>
      <% set_lang "tcn" %>      
      <%=f.text_field :subject ,:class=>"span5 m-wrap"%>            
      <label>Simple Chinese</label>
      <% set_lang "cn" %>
      <% chin = f.object %>      
      <%=text_field_tag "cn[subject]",chin.subject ,:class=>"span5 m-wrap"%>            
      <label>English</label>
      <% set_lang "en" %>
      <% eng = f.object %>      
      <%=text_field_tag "en[subject]",eng.subject ,:class=>"span5 m-wrap"%>            
    </fieldset>     
</div>

<div class="control-group">
    <label class="control-label">URL</label>
    <div class="controls">
     <%= f.text_field :hreflink, :class => 'someclass' %>
     </div>
</div>


<div class="control-group">
  <label class="control-label">Status </label>
    <div class="controls">
       <%= f.select :state,News::STATES.map{|k,v| [v,k]} ,:selected =>f.object.new_record? ? 1 : @news.state ? 1 : 0 %>
       
       
    </div>
</div>
<div class="form-actions">
  <%=f.submit "Save",:class=> "btn blue"%>
  <button type="button" class="btn" onclick="this.form.reset();">Reset</button>
  <button type="button" class="btn" onclick="window.location.href='/admin/newses'">Cancel</button>
</div>