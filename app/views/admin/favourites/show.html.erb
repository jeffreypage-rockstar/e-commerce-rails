<% require 'will_paginate/array' %>   
      <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
      <div id="portlet-config" class="modal hide">
        <div class="modal-header">
          <button data-dismiss="modal" class="close" type="button"></button>
          <h3>Favourites</h3>
        </div>
        
      </div>
      <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
      <!-- BEGIN PAGE CONTAINER-->
      <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
          <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->     
            <h3 class="page-title">
                        Favourites
            </h3>
            
          </div>
        </div>
        <!-- END PAGE HEADER-->
        <div class="row-fluid">
          
              
              
                <table class="table table-striped table-hover table-bordered table-hd" id="sample_editable_1">
                  <thead>
                    <tr>
                      
                     
                      <th>Product Name</th>
                      <th>Count of Favourites</th>
                      
                      
                      
                    </tr>
                  </thead>
                  <tbody>
                    <%if @products.present? %>
                      <% flag = false %>
                      <%@products.each do |product|%>
                      <% if product.product_rocks.count != 0 %>
                      <% flag = true %>
                        <tr class="">
                          
                          
                          <td><%=product.name.to_s%></td>
                          <td><%= link_to product.product_rocks.count.to_s, "/admin/desfavourites/#{product.id}"%></td>
                        </tr>
                        <%end%>
                      <%end%>
                    <%else%>
                    <tr class="" >
                      <td colspan="5" align="center" verticle-align="middle"> No Data found </td>
                    </tr>
                    <%end%>
                    

                  </tbody>
                </table>
                              <% if flag == true %>  
                                <div class="row-fluid table-top-cont">
                                  <div style="float:right">
                                    <div class="dataTables_paginate paging_bootstrap digg_pagination">
                                      <%= will_paginate @products, :container => false %>
                                    </div>
                                    <label class="showing-records"><%= page_entries_info @products %></label>
                                </div>
                            </div>
                            <%end%>
                          </div>
          
      </div>
      <!-- END PAGE CONTAINER-->    
    