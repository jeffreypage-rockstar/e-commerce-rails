<tr>
  <td><a href="<%=product_path(item.variant.product,:variant_id=>item.variant)%>"><%= image_tag item.variant.featured_image ,class: 'img-left', width: '70px', height: '70px' %><!-- <img src="/assets/main/table-img.jpg" alt="" class=""> --></a>
    <div class="prd-list-div">
      <span> <%=link_to item.variant.product_name,product_path(item.variant.product,:variant_id=>item.variant) %></span>
      <label>Color: <%=item.variant.color %></label>
      <small>Brand: <%=  item.variant.brand_name.blank? ? '' : ['-', item.variant.brand_name].join(' ') %></small>
      
     
    </div>
  </td>
  <td align="center" class="code-table-data" valign="middle"><%=item.variant.sku%></td>
  <td class="price-table"><%= number_to_currency item.price %></td>
  <td class="quantity-td">
    <%=hidden_field_tag "cod_var_#{item.variant.id}",item.variant.count_on_hand%>
    <%= cart_items_form.text_field :quantity, :size=>"2" ,class: "span1" %>
    <a href="#;return false;" onclick="javascript:add_val('<%=i%>','<%=item.variant.id%>')"><img src="/assets/main/add-icon.gif" alt="" class="add-btn-inp"></a></td>
  <td class="sub-total"><%= number_to_currency item.price.to_f * cart_items_form.object.quantity.to_f %></td>
  <td class="close-icon-td"><%= link_to image_tag("/assets/main/close-icon.png"), shopping_cart_item_path(item, :variant_id => item.variant_id),:method => :delete, :class => 'button tiny' %><%#= link_to 'Save for Later',move_to_shopping_cart_item_path(item, :variant_id => item.variant_id,:item_type_id     => ItemType::SAVE_FOR_LATER_ID),:method           => 'put',:class            => 'button tiny secondary' %>
  </td>
</tr>


